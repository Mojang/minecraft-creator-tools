{
  "format_version": "1.20.10",
  "animation_controllers": {
    "controller.animation.sample_entity.movement": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "animation.sample_entity.idle"
          ],
          "transitions": [
            {
              "walking": "query.modified_move_speed > 0.1"
            }
          ]
        },
        "walking": {
          "animations": [
            "animation.sample_entity.walk"
          ],
          "transitions": [
            {
              "default": "query.modified_move_speed <= 0.1"
            }
          ]
        }
      }
    }
  }
}