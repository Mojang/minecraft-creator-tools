{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"outDir": "dist",
		"moduleResolution": "node",
		"lib": [
			"esnext","WebWorker"
		],
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"rootDir": "src",
		"esModuleInterop": true,
		"skipLibCheck": true,		
		"strict": true, 
		"noImplicitReturns": true, 
		"noFallthroughCasesInSwitch": true,
	},
	"exclude": [
		"src/UX/**/*",
		"src/UXex/**/*",
		"node_modules_archive/**/*",
		"node_modules_overrides/**/*",
		"src/worldux/**/*",
		"src/monaco/**/*",
		"src/babylon/**/*",
		"src/dataform/**/*",
		"src/local/**/*",
		"src/cli/**/*",
		"src/test/**/*",
		"out/**/*",		
		"public/**/*",		
		"debugoutput/**/*",		
		"build/**/*",		
		"toolbuild/**/*",
		"scriptlibs/**/*",
		"test/results/**/*",
		"test/scenarios/**/*",
		"src/index.tsx",
		"src/vscode/webextension.ts",
		"node_modules/node-fetch/**/*",
		"src/vscwebindex.tsx",
		"src/jsnwebindex.tsx",
		"src/index.ts",
		"src/storage/BrowserFile.ts",
		"src/storage/BrowserFolder.ts",
		"src/storage/BrowserStorage.ts",
	],
}
