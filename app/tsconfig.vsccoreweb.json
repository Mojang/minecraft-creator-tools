{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"outDir": "dist",
		"lib": [
			"es2022","WebWorker"
		],
		"types": [ "@types/wicg-file-system-access"],
		"sourceMap": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,   /* enable all strict type-checking options */
		"noImplicitReturns": true, 
		"noFallthroughCasesInSwitch": true,
	//	"noUnusedParameters": true, 
	},
	"exclude": [
		"src/UX/**/*",
		"src/UXex/**/*",
		"src/worldux/**/*",
		"src/monaco/**/*",
		"src/babylon/**/*",
		"src/dataform/**/*",
		"src/local/**/*",
		"src/test/**/*",
		"src/cli/**/*",
		"out/**/*",		
		"public/**/*",
		"debugoutput/**/*",		
		"build/**/*",		
		"toolbuild/**/*",
		"scriptlibs/**/*",
		"test/results/**/*",
		"test/scenarios/**/*",
		"src/index.tsx",
		"node_modules_archive/**/*",
		"node_modules/node-fetch/**/*",
		"src/vscwebindex.tsx",
		"src/vscode/extension.ts",
		"src/vscode/VscDedicatedServerManager.ts",
		"src/vscode/VscWebSocketServerManager.ts",
		"src/jsnwebindex.tsx",
		"src/index.ts",
		"src/storage/BrowserFile.ts",
		"src/storage/BrowserFolder.ts",
		"src/storage/BrowserStorage.ts",
	],
}
