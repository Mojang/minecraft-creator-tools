{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [ "@types/wicg-file-system-access", "mocha"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "out",
    "public/**/*",		
    "src/cli/**/*.ts",
    "src/cli/*.ts",
    "src/test/**/*",
    "src/local/**/*.ts",
    "src/local/LocalUtilities.ts",
    "src/local/*.ts"
  ]
}
