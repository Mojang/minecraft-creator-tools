{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vite/client",
      "@types/wicg-file-system-access",
      "mocha"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "debugoutput",
    "out",
    "build",
    "toolbuild",
    "public/**/*",
    "src/cli/**/*.ts",
    "src/cli/*.ts",
    "src/mcp/**/*.ts",
    "src/mcp/*.ts",
    "src/test/**/*",
    "src/testweb/**/*",
    "src/local/**/*.ts",
    "src/local/LocalUtilities.ts",
    "src/local/*.ts"
  ]
}