{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"outDir": "dist",
		"moduleResolution": "node",
		"lib": [
			"es2022","dom"
		],
		"types": [ "@types/wicg-file-system-access"],
		"sourceMap": true,
		"rootDir": "src",
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitReturns": true, 
		"noFallthroughCasesInSwitch": true,
	},
	"exclude": [
		"src/monaco/**/*",
		"src/local/**/*",
		"src/cli/**/*",
		"src/vscode/**/*",
		"src/test/**/*",
		"out/**/*",
		"public/**/*",
		"dist/**/*",
		"tools/**/*",
		"debugoutput/**/*",		
		"build/**/*",
		"toolbuild/**/*",
		"scriptlibs/**/*",
		"test/results/**/*",
		"test/scenarios/**/*",
		"gulp*",
		"monaco*",
		"webpack*",
		"node_modules_archive/**/*",
		"src/jsnwebindex.tsx",
		"config-overrides*",
		"out/**/*",
		"src/index.ts",
	],
}
