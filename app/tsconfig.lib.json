{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "declaration":true,
    "declarationDir": "./toolbuild/lib",
    "outDir": "./toolbuild/lib",
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "types": ["node"]
  },
  "include": [
    "src/core/**/*",
    "src/minecraft/**/*",
    "src/storage/**/*",
    "src/app/**/*",
    "src/info/**/*",
    "src/updates/**/*",
    "src/dataform/**/*",
    "src/gameTest/**/*",
    "src/script/**/*",
    "src/actions/**/*",
    "src/types/**/*",
    "src/github/**/*",
    "src/clientapp/**/*",
    "src/electron/**/*",
    "src/devproject/**/*",
    "src/design/**/*",
    "src/manager/**/*",
    "src/jsonschema/**/*",
    "src/worldtest/**/*",
    "src/integrations/**/*",
    "src/images/**/*",
    "src/tools/**/*",
    "src/docgen/**/*",
    "src/local/ILocalUtilities.ts"
  ],
  "exclude": [
    "node_modules",
    "src/test/**/*",
    "src/testweb/**/*",
    "src/UX/**/*",
    "src/UXex/**/*",
    "src/worldux/**/*",
    "src/vscode/**/*",
    "src/vscodeweb/**/*",
    "src/cli/**/*",
    "src/mcp/**/*",
    "src/babylon/**/*",
    "src/analytics/**/*",
    "src/local/LocalUtilities.ts",
    "src/local/LocalEnvironment.ts",
    "src/local/LocalTools.ts",
    "src/local/ServerManager.ts",
    "src/local/MinecraftMcpServer.ts",
    "src/storage/FileSystemFile.ts",
    "src/storage/FileSystemFolder.ts",
    "src/storage/FileSystemStorage.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
